<div id='social'>
  <% if current_user %>
    <div class='username' data-user-id='<%= current_user.id %>'>
      <%= link_to current_user.email, user_path(current_user) %>
    </div>
    <%= link_to "Sign out", destroy_user_session_path, :method => :delete %>
  <% else %>
    <%= link_to "Sign in", new_user_session_path %>
  <% end %>
</div>
